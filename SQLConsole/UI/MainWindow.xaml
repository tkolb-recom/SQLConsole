<RibbonWindow x:Class="Recom.SQLConsole.UI.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
              xmlns:ui="clr-namespace:Recom.SQLConsole.UI"
              mc:Ignorable="d"
              Title="SQL Console" Height="450" Width="800">
    <Window.DataContext>
        <ui:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <Ribbon DockPanel.Dock="Top">
            <Ribbon.HelpPaneContent>
                <RibbonButton SmallImageSource="{StaticResource ImageDelete}" />
            </Ribbon.HelpPaneContent>

            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar>
                    <RibbonButton ToolTip="Speichern" SmallImageSource="{StaticResource ImageOpenFile}" />
                    <RibbonButton ToolTip="Öffnen" SmallImageSource="{StaticResource ImageOpenFile}" />
                    <RibbonButton ToolTip="Undo" SmallImageSource="{StaticResource ImageUndo}" />
                    <RibbonButton ToolTip="Redo" SmallImageSource="{StaticResource ImageRedo}" />
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>

            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu>
                    <RibbonApplicationMenuItem Header="Neu" />
                    <RibbonApplicationMenuItem Header="Öffnen" ImageSource="{StaticResource ImageOpenFile}" />
                    <RibbonApplicationMenuItem Header="Speichern" ImageSource="{StaticResource ImageOpenFile}" />
                    <RibbonApplicationMenu.FooterPaneContent>
                        <RibbonButton Label="Beenden" />
                    </RibbonApplicationMenu.FooterPaneContent>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Start">
                <RibbonGroup Header="Bearbeiten">
                    <RibbonButton Label="Kopieren" SmallImageSource="{StaticResource ImageCopy}" />
                    <RibbonButton Label="Einfügen" SmallImageSource="{StaticResource ImagePaste}" />
                </RibbonGroup>
                <RibbonGroup Header="Schrift">
                    <RibbonComboBox ToolTip="Schriftart" />
                    <RibbonComboBox ToolTip="Schriftgröße" />
                    <RibbonButton ToolTip="Schriftgrad vergrößern" SmallImageSource="{StaticResource ImageCut}" />
                    <RibbonButton ToolTip="Schriftgrad verkleinern" SmallImageSource="{StaticResource ImageCut}" />
                </RibbonGroup>
            </RibbonTab>

            <RibbonTab Header="Datenbank">
                <RibbonGroup Header="Verbindung">
                    <RibbonComboBox ToolTip="Datenbank" />
                    <RibbonControlGroup></RibbonControlGroup>
                    <RibbonButton ToolTip="Verbinden"
                                  SmallImageSource="{StaticResource ImageOpenFile}" />
                    <RibbonButton ToolTip="Trennen"
                                  SmallImageSource="{StaticResource ImageOpenFile}" />
                </RibbonGroup>
                <RibbonGroup Header="Ausführung">
                    <RibbonButton Label="Skript ausführen"
                                  LargeImageSource="{StaticResource ImageOpenFile}" />
                    <RibbonCheckBox x:Name="Transaction"
                                    Label="Transaktion starten"
                                    IsChecked="True" />
                    <RibbonCheckBox Label="Transaktion abschließen"
                                    IsEnabled="{Binding Path=IsChecked, ElementName=Transaction}" />
                </RibbonGroup>
            </RibbonTab>

            <RibbonTab Header="Ansicht">
                <RibbonGroup Header="Theme">
                    <RibbonButton Label="Hell"
                                  LargeImageSource="{StaticResource ImageOpenFile}" />
                    <RibbonButton Label="Dunkel"
                                  LargeImageSource="{StaticResource ImageOpenFile}" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>

        <avalonedit:TextEditor
            Document="{Binding QueryDocument}"
            SyntaxHighlighting="SQL"
            FontFamily="Consolas" FontSize="10pt"
            ShowLineNumbers="True"
            LineNumbersForeground="RoyalBlue"
            BorderThickness="1" BorderBrush="DarkGray"
            Margin="5" />
    </DockPanel>
</RibbonWindow>